<form method="post" action="{{ path('app_images_delete', {'id': image.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer l'image?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
    <button class="btn btn-danger text-light ms-1 mt-2">Supprimer l'image</button>
</form>
