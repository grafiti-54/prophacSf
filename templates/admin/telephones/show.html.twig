{% extends 'admin/accueil.html.twig' %}

{% block title %}Admin - Prophac{% endblock %}

{% block PageTitle %} Détail du numéro {{ telephone.numero }}{% endblock %}


{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ telephone.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ telephone.numero }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn btn-success text-light ms-2 mt-2" href="{{ path('app_telephones_edit', {'id': telephone.id}) }}">Modifier ce numéro</a>
        {{ include('admin/telephones/_delete_form.html.twig') }}
    </div>
    <a class="btn btn-prophac ms-2 mt-2" href="{{ path('app_telephones_index') }}">Retourner sur la liste des numéros</a>
{% endblock %}
