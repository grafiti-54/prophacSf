<form method="post" action="{{ path('app_articles_delete', {'id': article.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer l'article?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn btn-danger text-light ms-1 mt-2">Supprimer l'article</button>
</form>
