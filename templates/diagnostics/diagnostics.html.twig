{% extends 'base.html.twig' %}
{% block title %}Diagnostics - Prophac
{% endblock %}
{% block illustration %}
	<div class="departement diagnostics-container">
		<h1 class="titre-departement">DIAGNOSTICS</h1>
		<p class="sous-titre-departement">
			Analyseurs et réactifs pour les analyses médicales et les analyses de
			            recherche bio-médicales.
		</p>
		<img class="picto" src="{{asset('assets/img/Picto_Diagno_demi-tons_rgb.png')}}" alt="Picto DIAGNOSTICS"/>
	</div>
{% endblock %}

{% block body %}
	<!--sous titre-->
	<a href="{{path('app_diagnostics.annuaire')}}">Annuaire diagnostics</a>

	<div class="container titre-section">Produits</div>
	{# liste des produits du département diagnostics #}
	<section class="py-4 my-3">
		<div class="container">
			<div class="row">
				{% for produit in produits %}
					<div class="col-md-6 col-lg-4">
						<div class="card card-perso my-3">
							<img class="image-produit" src="../../../uploads/{{ produit.photo}}" class="img-fluid" alt="photo-{{ produit.nom }} "/>
							<figcaption class="overlay">
								<p>
									{{ produit.description }}
								</p>
							</figcaption>
							<div class="card-body text-center">
								<a href="{{ produit.lien }} " target="_blank" class="btn btn-produit">{{ produit.nom }}</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
	{# Liste des partenaire du département diagnostics #}
	<div class="container titre-section">Partenaires</div>
	{# {{ dump(partenaires) }} #}
	<div class="container">
		<div class="row text-center text-lg-start">
			{% for partenaire in partenaires %}
				<div class="col-lg-3 col-md-4 col-6">
					<a href="{{ partenaire.siteInternet}}" target="_blank" class="d-block mb-4 h-100">
						<img class="logo-partenaire" src="../../../uploads/{{ partenaire.logo}}" alt="logo-{{partenaire.nom}}">
					</a>
				</div>
        {% endfor %}
			</div>
	</div>

{% endblock %}
