{% extends 'base.html.twig' %}
{% block title %}ISO:9001 - Prophac
{% endblock %}
{% block illustration %}
	<div class="departement iso-container">
		<h1 class="titre-departement">ISO-9001</h1>
	</div>
{% endblock %}
{% block stylesheets %}
			<link rel="stylesheet" href="{{asset('assets/css/article.css')}}">
		{% endblock %}
{% block body %}
{# {{ dump(article) }} #}
<section class="article">
        <div class="container my-3">
            <div class="row">
                <div class="col-lg-12 pt-lg-0">
                    <br />
                    <img src="../../../uploads/{{ article.illustration}}" width="350px" class="float-end imgshadow ps-2 img-fluid" alt="{{ article.titreIllustration}}">
                    <div class="m-3">
						{% autoescape false %} {{ article.contenu}}  {% endautoescape %}
                    </div>
                </div>
            </div>
        </div>

        <div class="iso text-center mb-5 container">
            <img src="{{asset('assets/img/certificat iso.jpg')}}" alt="certificat-iso-prophac" class="img-fluid">
        </div>
    </section>
{% endblock %}