{% extends 'admin/accueil.html.twig' %}

{% block title %}Admin - Prophac{% endblock %}

{% block PageTitle %} Détail du collaborateur {{ collaborateur.nom }} {{ collaborateur.prenom }}{% endblock %}

{% block body %}
    <h1>Collaborateurs</h1>
{{ dump(collaborateur) }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ collaborateur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ collaborateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ collaborateur.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ collaborateur.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ collaborateur.roles ? collaborateur.roles|json_encode : '' }}</td>
            </tr>
            {# <tr>
                <th>Password</th>
                <td>{{ collaborateur.password }}</td>
            </tr> #}
            <tr>
                <th>Photo</th>
                <td>{{ collaborateur.photo }}</td>
            </tr>
            <tr>
                <th>Qualification</th>
                <td>
                    {% for qualifications in collaborateur.qualification %}
                        {{ qualifications}} <br>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ collaborateur.numero }}</td>
            </tr>
            {# <tr>
                <th>Département</th>
                <td>{{ collaborateur.departements }}</td>
            </tr> #}
            {# <tr>
                <th>Article</th>
                <td>{{ collaborateur.articles }}</td>
            </tr> #}
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn btn-success text-light ms-2 mt-2" href="{{ path('app_collaborateurs_edit', {'id': collaborateur.id}) }}">Modifier le collaborateur</a>
        <a class="btn btn-warning text-light ms-2 mt-2" href="{{ path('user.edit.password', {'id': collaborateur.id}) }}">Modifier le mot de passe du collaborateur</a>
        {{ include('collaborateurs/_delete_form.html.twig') }}
        
        
    </div>
    <a class="btn btn-prophac ms-2 mt-2" href="{{ path('app_collaborateurs_index') }}">Retourner sur la liste des collaborateurs</a>
    
{% endblock %}
