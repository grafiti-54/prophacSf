<div class="container sous-titre">
	En ce moment chez Prophac</div>
{# articles de la page d'accueil #}
{# {{ dump(articles) }} #}
<section class="article">
	<div class="container">
		{% for article in articles %}
		<div class="row">
			<div class="col-lg-12 pt-lg-0 disposition">
				<br />
				<div class="float-end m-3">
					<div class="d-flex image-article">
						<img src="../../../uploads/{{ article.illustration}}"
							class="{% if loop.index is odd %}float-end imgshadow{% else %}float-start imgshadow{% endif %}"
							alt="{{ article.titreIllustration}}">
					</div>
					<small class="legende-illustration text-end ms-3" height="25px">{{ article.legendeIllustration}}</small>
				</div>
				<div class="m-3">
					<p>
						{% autoescape false %}
						{{ article.contenu}}
						{% endautoescape %}
					</p>
				</div>
			</div>
			<hr>
			{% endfor %}
		</div>
	</div>
</section>

{# sous titre pour la section des produits #}
<div class="container sous-titre">
	Produits</div>
{# produit de la page d'accueil #}
<section class="py-4 my-5">
	<div class="container">
		<div class="row">
			{# {{ dump(produits) }} #}
			{% for produit in produits %}
			<div class="col-md-6 col-lg-4 col-sm-6">
				<div class="card card-perso my-3">
					<img class="image-produit" src="../../../uploads/{{ produit.photo}}" class="img-fluid"
						alt="photo-{{ produit.nom }} " />
					<figcaption class="overlay">
						<p>
							{{ produit.description }}
						</p>
					</figcaption>
					<div class="card-body text-center">
						<a href="{{ produit.lien }} " target="_blank" class="btn btn-produit">{{ produit.nom }}</a>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</section>
{% endblock %}