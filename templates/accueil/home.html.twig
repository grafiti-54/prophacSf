{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link
	rel="stylesheet" href="{{asset('assets/css/article.css')}}">
{# <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css"> #}
{% endblock %}

{% block javascripts %}
	{# SCRIPT AOS #}
	<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
{% endblock %}

{% block body %}

	<div class="container mt-4">
		<div class="row text-center text-lg-start" data-aos="fade-down" data-aos-easing="linear" data-aos-duration="800">
			<div class="col-lg-3 col-md-6 col-6">
				<a href="{{path('app_diagnostics')}}" class="d-block mb-4 h-100">
					<img class="logo-accueil" src="{{asset('assets/img/diagnostics-1.png')}}" alt="picto-diagnostics">
				</a>
			</div>
			<div class="col-lg-3 col-md-6 col-6">
				<a href="{{path('app_pharma')}}" class="d-block mb-4 h-100">
					<img class="logo-accueil" src="{{asset('assets/img/pharmaceuticals-1.png')}}" alt="picto-pharma">
				</a>
			</div>
			<div class="col-lg-3 col-md-6 col-6">
				<a href="{{path('app_patient')}}" class="d-block mb-4 h-100">
					<img class="logo-accueil" src="{{asset('assets/img/patient-information-1.png')}}" alt="picto-patient">
				</a>
			</div>
			<div class="col-lg-3 col-md-6 col-6">
				<a href="{{path('app_veto')}}" class="d-block mb-4 h-100">
					<img class="logo-accueil" src="{{asset('assets/img/veterinary-1.png')}}" alt="picto-veto">
				</a>
			</div>
		</div>
	</div>
	<div class="container sous-titre">
		Prophac en quelques chiffres</div>
	<div class="container" data-aos="zoom-in" data-aos-duration="2000">
		<div class="row">
			<div class="col-md-4 block">
				<div class="circle">
					<a href="{{path('app_historique')}}">
						<h2>76</h2>
						<p>Années d'expériences</p>
					</a>
				</div>
			</div>
			<div class="col-md-4 block">
				<div class="circle">
					<h2>110</h2>
					<p>Partenaires</p>
				</div>
			</div>
			<div class="col-md-4 block">
				<div class="circle">
					<a href="{{path('app_historique')}}">
						<h2>40</h2>
						<p>Collaborateurs</p>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="container sous-titre">
		En ce moment chez Prophac</div>
	{# articles de la page d'accueil #}
	{# {{ dump(articles) }} #}
	<section class="article" data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1500">
		<div class="container">
			{% for article in articles %}
				<div class="row">
					<div class="col-lg-12 pt-lg-0 disposition">
						<br/>
						<div class="float-end m-3">
							<div class="d-flex image-article">
								<img src="../../../uploads/{{ article.illustration}}" class="{% if loop.index is odd %}float-end imgshadow{% else %}float-start imgshadow{% endif %}" alt="{{ article.titreIllustration}}" loading="lazy">
							</div>
							<small class="legende-illustration text-end ms-3" height="25px">{{ article.legendeIllustration}}</small>
						</div>
						<div class="m-3 contenu-article">
							<p>
								{% autoescape false %}
									{{ article.contenu}}
								{% endautoescape %}
							</p>
						</div>
					</div>
					<hr>
				{% endfor %}
			</div>
		</div>
	</section>

	{# sous titre pour la section des produits #}
	<div class="container sous-titre">
		Produits</div>
	{# produit de la page d'accueil #}
	<section class="py-4 my-5">
		<div class="container">
			<div
				class="row">
				{# {{ dump(produits) }} #}
				{% for produit in produits %}
					<div class="col-md-6 col-lg-4 col-sm-6 prod" data-aos="fade-zoom-in" data-aos-easing="ease-in-back" data-aos-delay="700" data-aos-offset="0">
						<div class="card card-perso my-3">
							<div>
								<img class="image-produit d-block" src="../../../uploads/{{ produit.photo}}" class="img-fluid" alt="photo-{{ produit.nom }} " loading="lazy"/>
							</div>
							<figcaption class="overlay">
								<p>
									{{ produit.description }}
								</p>
							</figcaption>
							<div class="card-body text-center">
								<a href="{{ produit.lien }} " target="_blank" class="btn btn-produit">{{ produit.nom }}</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
