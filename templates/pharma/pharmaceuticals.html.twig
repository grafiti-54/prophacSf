{% extends 'base.html.twig' %}

{% block title %}Pharmaceuticals - Prophac{% endblock %}

{% block illustration %}
    <div class="departement pharma-container">
        <h1 class="titre-departement">PHARMACEUTICALS</h1>
        <p class="sous-titre-departement">
            Partenaire de l’industrie pharmaceutique au Grand-Duché de Luxembourg.
        </p>
        <img class="picto" src="{{asset('assets/img/Picto_Pharma_demi-tons_rgb.png')}}" alt="Picto PHARMACEUTICALS" />
  </div>
{% endblock %}

{% block body %}
<a href="{{path('app_pharma.annuaire')}}">Annuaire pharma</a>
  {# Liste des partenaire du département pharmaceuticals #}
    <div class="container titre-section">Partenaires</div>
    {# {{ dump(partenaires) }} #}
	<div class="container">
		<div class="row text-center text-lg-start">
			{% for partenaire in partenaires %}
				<div class="col-lg-3 col-md-4 col-6">
					<a href="{{ partenaire.siteInternet}}" target="_blank" class="d-block mb-4 h-100">
						<img class="logo-partenaire" src="../../../uploads/{{ partenaire.logo}}" alt="logo-{{partenaire.nom}}">
					</a>
				</div>
        {% endfor %}
			</div>
	</div>
{% endblock %}